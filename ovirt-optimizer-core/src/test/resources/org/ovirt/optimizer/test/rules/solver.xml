<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <environmentMode>FULL_ASSERT</environmentMode>

    <!-- Domain model configuration -->
    <solutionClass>org.ovirt.optimizer.solver.problemspace.OptimalDistributionStepsSolution</solutionClass>
    <entityClass>org.ovirt.optimizer.solver.problemspace.Migration</entityClass>

    <!-- Score configuration -->
    <scoreDirectorFactory>
        <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
        <scoreDrl>org/ovirt/optimizer/test/rules/default.drl</scoreDrl>
    </scoreDirectorFactory>

    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
    </constructionHeuristic>

    <localSearch>
        <acceptor>
            <entityTabuSize>7</entityTabuSize>
        </acceptor>

        <forager>
            <acceptedCountLimit>1000</acceptedCountLimit>
        </forager>

        <termination>
            <unimprovedMillisecondsSpentLimit>1000</unimprovedMillisecondsSpentLimit>
        </termination>

        <!-- Workaround for https://issues.jboss.org/browse/PLANNER-235 -->
        <unionMoveSelector>
            <changeMoveSelector>
                <valueSelector>
                    <variableName>instance</variableName>
                </valueSelector>
            </changeMoveSelector>
            <changeMoveSelector>
                <valueSelector>
                    <variableName>destination</variableName>
                </valueSelector>
            </changeMoveSelector>
            <swapMoveSelector/>
            <cartesianProductMoveSelector>
                <changeMoveSelector>
                    <entitySelector id="changeAllSelector">
                        <entityClass>org.ovirt.optimizer.solver.problemspace.Migration</entityClass>
                    </entitySelector>
                    <valueSelector>
                        <variableName>instance</variableName>
                    </valueSelector>
                </changeMoveSelector>
                <changeMoveSelector>
                    <entitySelector mimicSelectorRef="changeAllSelector"/>
                    <valueSelector>
                        <downcastEntityClass>org.ovirt.optimizer.solver.problemspace.Migration</downcastEntityClass>
                        <variableName>destination</variableName>
                    </valueSelector>
                </changeMoveSelector>
            </cartesianProductMoveSelector>
        </unionMoveSelector>
    </localSearch>
</solver>
